<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Omicron News"
        android:textSize="34sp"
        android:id="@+id/lbl1"
        android:layout_marginBottom="24dp"
        android:layout_above="@+id/txt"/>




    <ImageView android:id="@+id/txt"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/baseline_coronavirus_red_500_48dp"/>


    <TextView android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample App"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_above="@+id/lbl3"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="Powered By Ryan Biugos"
        android:layout_alignParentBottom="true"
        style="@style/TextAppearance.AppCompat.Small"
        android:id="@+id/lbl3"/>

</RelativeLayout>